{
  "name": "tgs",
  "version": "1.1.4-0",
  "description": "Troublor General Purpose Server",
  "repository": "https://github.com/Troublor/tgs",
  "author": "William Aaron Cheung",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "test": "NODE_OPTIONS=--experimental-vm-modules yarn jest",
    "typeorm": "typeorm-ts-node-esm -d src/database/data-source.migration.ts",
    "dev": "ts-node --esm src/index.ts",
    "build": "tsc",
    "start": "yarn node dist/index.js",
    "release": "zsh ./scripts/release.zsh",
    "docker:build": "docker build -t troublor/tgs:$(jq -r .version package.json) .",
    "docker:push": "docker push troublor/tgs:$(jq -r .version package.json)"
  },
  "packageManager": "yarn@3.3.1",
  "dependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/typeorm": "^9.0.1",
    "@troubkit/log": "^0.4.0",
    "class-validator": "^0.13.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "nest-winston": "^1.8.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "simple-git": "^3.16.0",
    "telegraf": "^4.11.2",
    "typeorm": "^0.3.11",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.2.1",
    "@types/async": "^3.2.16",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.6",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "jest-runner": "^29.3.1",
    "jest-serial-runner": "^1.2.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-jest-resolver": "^2.0.0",
    "ts-node": "^10.9.1",
    "type-fest": "^3.5.2",
    "typescript": "^4.9.4"
  },
  "stableVersion": "1.1.3"
}
